<?xml version="1.0" encoding="UTF-8"?>
<server description="Custom Identity Store Example">

    <!-- Enable features for Jakarta Security API -->
    <featureManager>
        <feature>servlet-5.0</feature>
        <feature>cdi-3.0</feature>
        <feature>appSecurity-4.0</feature>
        <feature>faces-3.0</feature>
    </featureManager>

    <!-- HTTP Endpoint Configuration -->
    <httpEndpoint id="defaultHttpEndpoint" 
                  host="*" 
                  httpPort="9080" 
                  httpsPort="9443"/>

    <!-- Application Configuration -->
    <webApplication id="custom-identity-store" 
                    location="custom-identity-store.war" 
                    contextRoot="/" />

    <!-- Logging -->
    <logging consoleLogLevel="INFO" 
             consoleSource="message,trace,accessLog,ffdc,audit" 
             traceSpecification="*=info:com.ibm.ws.security.*=all"/>

</server>
